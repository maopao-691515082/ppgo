    "name": "PPGo",
    "scopeName": "source.ppgo",
    "patterns": [
        {
            "comment": "cls or intf def",
            "match": "^\\s*(public\\s+)?(class|interface)\\s*([A-Za-z_]\\w*)",
            "captures": {
                "1": {
                    "name": "keyword.ppgo"
                },
                "2": {
                    "name": "keyword.ppgo"
                },
                "3": {
                    "name": "entity.name.type.ppgo"
                }
            }
        },
        {
            "include": "#keywords"
        },
        {
            "comment": "var def",
            "match": "(?<=\\bvar)\\s*([A-Za-z_]\\w*(\\s*,\\s*[A-Za-z_]\\w*)*)(?=[\\s=])",
            "captures": {
                "1": {
                    "patterns": [
                        {
                            "match": "[A-Za-z_]\\w*",
                            "name": "variable.ppgo"
                        }
                    ]
                }
            }
        },
        {
            "comment": "var def inside `var` block or assign",
            "match": "^\\s*([A-Za-z_]\\w*(\\s*,\\s*[A-Za-z_]\\w*)*)(?=[\\s=])",
            "captures": {
                "1": {
                    "patterns": [
                        {
                            "match": "[A-Za-z_]\\w*",
                            "name": "variable.ppgo"
                        }
                    ]
                }
            }
        },
        {
            "include": "#comments"
        },
        {
            "include": "#comments"
        },
        {
            "comment": "Interpreted string literals",
            "begin": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.ppgo"
                }
            },
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.ppgo"
                }
            },
            "name": "string.quoted.double.ppgo",
            "patterns": [
                {
                    "include": "#string_escaped_char"
                }
            ]
        },
        {
            "comment": "Raw string literals",
            "begin": "`",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.ppgo"
                }
            },
            "end": "`",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.ppgo"
                }
            },
            "name": "string.quoted.raw.ppgo",
            "patterns": [
            ]
        },
        {
            "comment": "uint literals",
            "match": "\\b((0[xX][0-9a-fA-F]+|0[oO][0-7]+|0[bB][01]+|[0-9]+)[uU])\\b",
            "name": "constant.numeric.integer.unsigned.ppgo"
        },
        {
            "include": "#numeric_literals"
        },
        {
            "comment": "Terminators",
            "match": ";",
            "name": "punctuation.terminator.ppgo"
        },
        {
            "comment": "func call",
            "match": "\\b([A-Za-z_]\\w*)\\(",
            "captures": {
                "1": {
                    "name": "support.function.ppgo"
                }
            }
